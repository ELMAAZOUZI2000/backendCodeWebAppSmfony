{% extends 'base.html.twig' %}
{% block body %} 
    <div class="container mt-5">
        <h2>Gerer les produits</h2>
        <div class="text-right mb-3">
            <a class="btn btn-primary" href="{{ path('manage.product.new') }}" >Create new product</a>
        </div>
       <table class="table table-hover table-striped">
            <thead>
                <th>Title</th> 
                <th>Actions</th>
            </thead>
            <tbody>
              {% for product in products %}
                <tr>
                    <td>{{ product.title }}</td>
                    <td>
                      <a class="btn btn-warning" href="{{ path('manage.product.edit', {'id': product.id}) }}"><i class="fa fa-edit"></i> Update</a>
                      <a class="btn btn-danger" href="{{ path('manage.product.delete', {'id': product.id})}}"><i class="fa fa-trash"></i> Delete</a>
                    </td>
                </tr>
              {% endfor %}
            </tbody>
       </table>
    </div>
{% endblock %}