{% extends 'base.html.twig' %}
{% block body %} 
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-8 d-flex justify-content-center">
                         <div class="card-img-top" style="width:50%">
                         {% if product.productImages is not empty %}
                             <div id="carouselExampleControls"  class="carousel slide" data-bs-ride="carousel">
                             <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                              <div class="carousel-inner">
                              {% set value = true %} 
                                {% for image in product.productImages %}    
                                <div class="carousel-item  {% if value %} active {% endif %}">
                                  <img src="/uploads/{{image.imageName}}" class="d-block w-100" alt="..." height="300px">
                                </div>  
                                {% set value = false %}
                                {% endfor %}
                              </div>
                              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                              </button>
                              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                              </button>
                            </div>
                       {% else %} 
                             <img src="/uploads/default_image.png" class="d-block w-100" alt="..." height="300px">
                        {% endif %}
                      </div>          
            </div>
            <dvi class="col-md-4">
                <h1 class="text-info">{{product.title}}</h1>
                <p>{{product.description}}</p>
                <h3 class="text-info">{{product.prix}}$</h3>
            </dvi>
        </div>
    </div>
    <div class="container">
        <h3>Informations</h3>
        <div class="row">
            <div class="col-md-8">
                <table class="table table-hover table-striped">
                    <tr>
                        <th>Title</th>
                        <td>{{product.title}}</td>
                    </tr>
                     <tr>
                        <th>Reference</th>
                        <td>{{product.reference}}</td>
                    </tr>
                     <tr>
                        <th>Description</th>
                        <td>{{product.description}}</td>
                    </tr>
                     <tr>
                        <th>Price</th>
                        <td>{{product.formattedPrice}} $</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>{{product.category.title}}</td>
                    </tr>
                </table>
            </div>
        </div>
        <a href=" {{ path('product.index') }} "  class="btn btn-primary">Back To List</a>
    </div> 

    
{% endblock %}